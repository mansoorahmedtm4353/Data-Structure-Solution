#include<iostream>
using namespace std;
int generateCode(int n) {
    if (n == 0) return 1;
    int product = 1;
    for (int i = n; i > 0; i--) {
        product *= i;
    }
    return product;
}

int main() {
    int (*codePtr)(int) = generateCode;
    int input;

    printf("Enter your secret number: ");
    scanf("%d", &input);

    int secretCode = codePtr(input);

    printf("Your secret code is: %d\n", secretCode);

    return 0;
}
